pipeline {
    agent any
    environment{
          Docker_TAG = getDockerTag()
    }

        stage('Deploy App') {
         steps{
              sshagent(['sampledemo']) {
                  sh "scp -o  StrictHostKeyChecking=no conf.yml ubuntu@15.207.84.91:/home/ubuntu/"
                  script{
                      try{
                          sh "ssh ubuntu@15.207.84.91 kubectl apply -f conf.yml"
                      } catch(error){
                           sh "ssh ubuntu@15.207.84.91 kubectl create -f conf.yml"
                   
}
                                    }
            }
        }
    }
}
}
def getDockerTag(){
    def tag  = sh script: 'git rev-parse HEAD', returnStdout: true
    return tag
}
